$field-box
  box-sizing border-box
  background white
  border 1px solid #e9e9e9
  border-radius 4px
  font-size 14px
  color #333
  line-height 150%

$reset
  appearance none
  display block
  box-sizing border-box
  margin 0
  padding 0
  border none
  background none
  line-height inherit
  font-size inherit
  color inherit

  &:focus
    outline none
    outline-offset 0

$input
  @extends $reset
  width 100%
  height 100%
  padding 9px 12px

  &::placeholder
    color #b9b9b9

  &::selection
    color white
    background-color #333

.gnocchi-focus
  border-color #666
