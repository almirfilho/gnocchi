$reset
  appearance none
  display block
  box-sizing border-box
  margin 0
  padding 0
  border none
  background none
  line-height inherit
  font-size inherit
  color inherit

  &:focus
    outline none
    outline-offset 0

$container
  box-sizing border-box
  display block
  width 100%
  height 40px

$box
  background white
  border 1px solid #e9e9e9
  border-radius 4px

$space
  padding 9px 12px

$typography
  font-size 14px
  line-height 150%
  color #333

  &::selection
    color white
    background-color #333

$focus
  &:focus
    border-color currentColor

$hover
  &:hover
    color #666

$click
  &:active
    color #999
