$field
  box-sizing border-box
  background white
  border 1px solid #e9e9e9
  border-radius 3px
  font-size 14px
  color #b9b9b9

  input[type=text],
  textarea
    display block
    box-sizing border-box
    padding 0 12px
    margin 0
    width 100%
    height 100%
    border none
    background none
    font-size inherit
    color inherit

    &:focus
      outline none
      outline-offset 0

    &::placeholder
      color red
