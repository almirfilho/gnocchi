$field-box
  box-sizing border-box
  background white
  border 1px solid #e9e9e9
  border-radius 4px
  font-size 14px
  color #333
  line-height 150%

$reset
  appearance none
  display block
  box-sizing border-box
  margin 0
  padding 0
  width 100%
  border none
  background none
  line-height inherit
  font-size inherit
  color inherit

  &:focus
    outline none
    outline-offset 0

$input
  @extends $reset
  padding 9px 12px
  height 100%

  &::placeholder
    color #b9b9b9

  &::selection
    color white
    background-color #333

  .gnocchi-focus &
    padding 8px 11px

.gnocchi-focus
  border-color #666
  border-width 2px
