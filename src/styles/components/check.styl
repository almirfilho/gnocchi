.gnocchi-check
  @extends $container
  @extends $space
  @extends $typography
  user-select none

  &-box
    @extends $box
    @extends $no-focus
    @extends $focus
    display inline-block
    width 21px
    height @width
    vertical-align middle

    &.gnocchi--is-checked
      color white
      background-color #333
      border-color @background-color

      &:focus
        border-color white

      .gnocchi-icon
        display inline

    .gnocchi-icon
      position relative
      display none
      top -1px
      left -3px
      font-size 21px

  &-label
    vertical-align middle
    cursor default

    .gnocchi-check-box + &
      margin-left 10px
