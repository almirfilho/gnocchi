.gnocchi-button
  @extends $reset
  @extends $container
  @extends $box
  @extends $space
  @extends $hover
  @extends $click
  @extends $focus
  @extends $typography
  line-height 100%
  letter-spacing -0.02em
  user-select none

  > *
    vertical-align middle

  .gnocchi-icon
    font-size 18px
    position relative
    top 1px

  * + .gnocchi-icon
    margin-left 6px

  &-action
    color white
    background-color #333
    border-color @background-color

    &:hover
      color @color
      background-color #666
      border-color @background-color

    &:active
      color @color
      background-color #999
      border-color @background-color

  &-highlight
    border-color currentColor

  &-lowlight
    color #ccc

  &-fit
    display inline-block
    width auto
