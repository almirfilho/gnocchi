.gnocchi-button
  @extends $reset
  @extends $box
  @extends $space
  @extends $hover
  @extends $click
  @extends $focus
  height 32px
  font-size 13px
  line-height 100%
  font-weight bold

  &-action
    color white
    background-color #333
    border-color @background-color

    &:hover
      color @color
      background-color #666
      border-color @background-color

  &-highlight
    border-color currentColor

  &-lowlight
    color #ccc

