.gnocchi-number
  position relative

  .gnocchi-text
    padding-right 40px

.gnocchi-number-buttons
  position absolute
  top 0
  right 0
  width 36px
  height 100%
  font-size 14px

$number-button
  width 100%
  height 50%
  text-align center
  color #333

  &:hover
    color #666

.gnocchi-number-up
  @extends $number-button

  .gnocchi-icon
    position relative
    top 2px

.gnocchi-number-down
  @extends $number-button
