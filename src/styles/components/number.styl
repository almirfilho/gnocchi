.gnocchi-number
  @extends $field-box
  position relative

.gnocchi-number-input
  @extends $input
  padding-right 40px

.gnocchi-number-buttons
  position absolute
  top 0
  right 0
  width 36px
  height 100%
  font-size 14px

  .gnocchi-focus &
    width @width - 2

$number-button
  @extends $reset
  position relative
  height 50%
  color #333

  &:hover
    color #666

  .fa
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.gnocchi-number-up
  @extends $number-button

.gnocchi-number-down
  @extends $number-button

  .fa
    height 18px
