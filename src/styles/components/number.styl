$number-button
  @extends $hover
  @extends $click
  width 100%
  height 50%
  text-align center
  color #333

.gnocchi-number
  position relative

  .gnocchi-text
    padding-right 40px

  &-buttons
    position absolute
    top 0
    right 0
    width 36px
    height 100%
    font-size 14px
    user-select none

  &-up,
  &-down
    @extends $number-button

    .gnocchi-icon
      position relative

  &-up
    .gnocchi-icon
      top 1px

  &-down
    .gnocchi-icon
      bottom 3px
