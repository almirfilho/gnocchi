.gnocchi-number
  @extends $field-box
  position relative

.gnocchi-number-input
  @extends $input
  padding-right 40px

.gnocchi-number-buttons
  position absolute
  top 0
  right 0
  width 40px
  height 100%
  font-size 10px

$number-button
  @extends $reset
  height 50%

.gnocchi-number-up
  @extends $number-button

  &::before
    content '^'

.gnocchi-number-down
  @extends $number-button

  &::before
    content 'v'
