// Rows ------------------------------------------------------------------------

.gg-row
  display flex
  box-sizing border-box
  max-width 1000px
  margin auto

  + .gg-row
    margin-top 10px

  + .gg-row-space
    margin-top 18px

// Columns ---------------------------------------------------------------------

col(n)
  flex 0
  flex-basis 100% * n
  box-sizing border-box

.gg-col
  flex 1
  box-sizing border-box

  &-{'1\/4'}
    col(1 / 4)

  &-{'1\/3'}
    col(1 / 3)

  &-{'1\/2'}
    col(1 / 2)

  &-{'2\/3'}
    col(2 / 3)

  &--is-aligned
    display flex
    flex-direction column
    justify-content center

[class^="gg-col"] + [class^="gg-col"]
  margin-left 10px

// Sections --------------------------------------------------------------------

.gg-header
  padding 15px 30px
  border-radius 2px
  background-color #e7e7e7

.gg-section
  padding 20px 30px
  border 1px solid #e7e7e7
  border-radius 2px
  background #f8f8f8
