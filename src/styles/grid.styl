// Rows ------------------------------------------------------------------------

.gg-row
  display flex
  box-sizing border-box
  max-width 1000px
  margin auto

  + .gg-row
    margin-top 10px

  + .gg-row-space
    margin-top 18px

// Columns ---------------------------------------------------------------------

col(n)
  @extends .gg-col
  flex 0
  flex-basis 100% * n

.gg-col
  flex 1
  box-sizing border-box

  + [class^="gg-col"]
    margin-left 10px

  &-{'1\/4'}
    col(1 / 4)

  &-{'1\/3'}
    col(1 / 3)

  &-{'1\/2'}
    col(1 / 2)

  &-{'2\/3'}
    col(2 / 3)
